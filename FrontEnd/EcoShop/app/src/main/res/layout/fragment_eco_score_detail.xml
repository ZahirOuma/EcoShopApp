<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Icône de retour -->
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/black"
        tools:ignore="UseAppTint" />


    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card d'en-tête - Environmental Impact -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Impact Environnemental"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7e5109"/>

                <!-- Green Score Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <TextView
                        android:id="@+id/greenScoreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textColor="#666666"
                        android:textSize="16sp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/liTexts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"/>

                <!-- Tableau des impacts -->
                <TableLayout
                    android:id="@+id/impactsTableEnvironmental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:layout_marginTop="16dp">

                    <TableRow
                        android:background="#F8F9FA"
                        android:padding="8dp">
                        <TextView
                            android:text="Étape"
                            android:textColor="#7e5109"
                            android:textStyle="bold"/>
                        <TextView
                            android:text="Impact"
                            android:textColor="#7e5109"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:paddingEnd="20dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card - Carbon Footprint -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empreinte Carbone"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#7e5109"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#F8F9FA">

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textColor="#666666"
                        android:textSize="16sp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/co2Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <TableLayout
                    android:id="@+id/impactsTableCarbon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:layout_marginTop="16dp">

                    <TableRow
                        android:background="#F8F9FA"
                        android:padding="8dp">
                        <TextView
                            android:text="Étape"
                            android:textColor="#7e5109"
                            android:textStyle="bold"/>
                        <TextView
                            android:text="Impact"
                            android:textColor="#7e5109"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:paddingEnd="20dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
    </LinearLayout>
