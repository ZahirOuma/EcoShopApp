<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="App info"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <!-- Image principale -->
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/astronaut_laptop"/>

            <!-- Bulle avec cÅ“ur -->
            <ImageView
                android:id="@+id/heartBubble"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top|right"
                android:src="@drawable/heart_bubble"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EcoShop"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#7e5109"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EcoShop is your eco-friendly shopping companion. Our mission is to help you make sustainable shopping choices while enjoying great deals."
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="40dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made with love"
            android:textStyle="bold"
            android:textColor="#7e5109"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@EcoShop."
            android:textStyle="bold"
            android:textColor="#E1A500"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</RelativeLayout>